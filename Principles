    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const categoryButtons = document.querySelectorAll('.category-button');
            const statementItems = document.querySelectorAll('.statement-item');
            let activeCategory = null; // Stores the currently selected category ('confident', 'need-info', 'new-topic')

            // Function to reset all button active states
            const resetCategoryButtons = () => {
                categoryButtons.forEach(button => {
                    button.classList.remove('active');
                });
            };

            // Event listener for category buttons
            categoryButtons.forEach(button => {
                button.addEventListener('click', () => {
                    resetCategoryButtons(); // Deactivate all buttons first
                    button.classList.add('active'); // Activate clicked button
                    activeCategory = button.id.replace('btn-', ''); // Set active category (e.g., 'confident')
                });
            });

            // Event listener for statement items
            statementItems.forEach(item => {
                item.addEventListener('click', () => {
                    if (activeCategory) {
                        // Remove previous category classes from the statement
                        item.classList.remove('statement-confident', 'statement-need-info', 'statement-new-topic');

                        // Add the new category class
                        item.classList.add(`statement-${activeCategory}`);

                        // Update the category label text and style
                        const labelSpan = item.querySelector('.category-label');
                        labelSpan.textContent = activeCategory.replace('-', ' ').replace(/\b\w/g, char => char.toUpperCase()); // Format to "Confident", "Need Information", etc.
                        labelSpan.className = `category-label category-label-${activeCategory}`; // Add class for specific label styling if needed
                    } else {
                        // Optionally, alert the user to select a category first
                        console.log('Please select a category first (Confident, Need more information, or New topic).');
                    }
                });
            });
        });
    </script>
